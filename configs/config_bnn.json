{
    "name": "bnn cifar10 fp",
    "n_gpu": 1,

    "model": {
        "module_name": "resnet_cifar_small",
        "type": "resnet20",
        "args": {
            "num_classes": 10,
            "activation": "STE", 
            "scale": false,
            "compute_scale": 1.0,
            "reg_type": "l1", 
            "reg_scale": true,
            "no_clip": false,
            "clip_scale": 2.0,
            "reg_lr": {
                "type": "stepLR",
                "lr_schedule": {
                    "300": 1e-6,
                    "400": 1e-5
                }

            },
            "full_precision": false 
        }
    },
    "data_loader": {
        "type": "Cifar10BigDataLoader",
        "args":{
            "data_dir": "",
            "batch_size": 80,
            "val_batch_size": 80,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers":8 
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "top1", "top5"
    ],
    "lr_scheduler": {
        "type": "custom",
        "args": {
            "lr_lambda": "fix"
        }
    },
    "trainer": {
        "module_name": "trainer_bnn",
        "type": "TrainerBNN",
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 2,
        "print_freq": 50,
        "monitor": "min val_loss",
        "early_stop": 55,

        "tensorboard": true
    }
}
