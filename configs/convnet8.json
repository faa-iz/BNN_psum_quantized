{
    "name": "convnet8",
    "n_gpu": 1,

    "model": {
        "module_name": "convnet8",
        "type": "convnet8",
        "args": {
            "dataset": "cifar10",
            "activation": "SS", 
            "scale": false,
            "compute_scale": "",
            "reg_type": "", 
            "reg_scale": false,
            "no_clip": true,
            "beta_init": 1.0,
            "clip_scale": 1.0,
            "reg_lr": {
                "type": "stepLR",
                "lr_schedule": {
                    "1": 1e-7,
                    "100": 1e-6,
                    "200": 1e-5
                }

            },
            "full_precision": false 
        }
    },
    "data_loader": {
        "type": "Cifar10DataLoader",
        "args":{
            "data_dir": "",
            "batch_size": 64,
            "val_batch_size": 256,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 8 
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "top1", "top5"
    ],
    "lr_scheduler": {
        "type": "custom",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "module_name": "trainer_bnn",
        "type": "TrainerBNN",
        "epochs": 280,
        "save_dir": "/data/sd/saved/convnet8",
        "save_period": 50,
        "verbosity": 2,
        "print_freq": 50,
        "monitor": "max val_top1",
        "early_stop": 300,

        "tensorboard": true
    }
}
