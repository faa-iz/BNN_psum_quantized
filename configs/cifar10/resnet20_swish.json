{
    "name": "resnet20_cifar10_swish",
    "n_gpu": 1,

    "model": {
        "module_name": "resnet_cifar_small",
        "type": "resnet20",
        "args": {
            "activation": "SWISH", 
            "scale": true,
            "compute_scale": "topk",
            "resume_path": "./data/resnet20.th",
            "reg_type": "l1", 
            "reg_scale": true,
            "no_clip": false,
            "beta_init": 2,
            "clip_scale": 2.0,
            "reg_lr": {
                "type": "stepLR",
                "lr_schedule": {
                    "1": 1e-7,
                    "150": 1e-6,
                    "200": 1e-5
                }

            },
            "full_precision": false
        }
    },
    "data_loader": {
        "type": "Cifar10DataLoader",
        "args":{
            "data_dir": "",
            "batch_size": 128,
            "val_batch_size": 256,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 8 
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "top1", "top5"
    ],
    "lr_scheduler": {
        "type": "custom",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "module_name": "trainer_bnn",
        "type": "TrainerBNN",
        "epochs": 300,
        "save_dir": "./data/saved/",
        "save_period": 10,
        "verbosity": 2,
        "print_freq": 50,
        "monitor": "max val_top1",
        "early_stop": 300,

        "tensorboard": true
    }
}
